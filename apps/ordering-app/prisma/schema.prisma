datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Restaurant {
  createdAt DateTime  @default(now())
  deletedAt DateTime?
  id        String    @id @default(cuid())
  info      String
  lat       Decimal?
  lng       Decimal?
  location  String?
  metadata  Json?
  name      String
  updatedAt DateTime  @updatedAt
}
